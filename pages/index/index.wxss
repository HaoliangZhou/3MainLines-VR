  margin-top: 13px;
  margin-left: 25px;
  margin-right: 25px;
  border-radius: 25%;
}
.content view{
  margin-top: 9px;
  letter-spacing: 1px;
  font-family: 微软雅黑;
}

.pInfo{
  border-radius: 5%;
}
.c1{
  color: #b1b1b1;
  width: 100%;
