  border-bottom: 1px solid #f4f5f6;
}
.c2 view {
  font-size: 16px;
  height: 35px;
  padding-top: 3px;
}
.pSname,.pSno,.cClass,.cMajor,.cCollege{
  border-bottom: 1px solid #f2f3f4;
}
