.head-height {
  height: 230rpx;
}

.head {
  display: flex;
  width: 100%;
  background-color: #fff;
  align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  position: fixed;
  margin-left:10px; 
}

.userinfo-avatar {
  width: 138rpx;
  height: 138rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
  font-size: 18px;
}
.hr{
  height: 15px;
  background-color:#f4f5f6; 
}
.hr1{
  height: 11px;
  background-color:#f4f5f6; 
}
.hr2{
  height: 11px;
}
/**以下为内容**/
